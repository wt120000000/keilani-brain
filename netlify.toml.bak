# =========================
# Netlify configuration
# =========================

[build]
  publish  = "public"
  command  = ""
  # If your functions live in non-default folder, uncomment the next line:
  # functions = "netlify/functions"

[functions]
  node_bundler = "esbuild"

# ---------- Static assets ----------
[[redirects]]
  from = "/assets/*"
  to   = "/assets/:splat"
  status = 200

# ---------- Node Functions (JSON / non-streaming) ----------
[[redirects]]
  from = "/api/chat"
  to   = "/.netlify/functions/chat"
  status = 200

# Never cache HTML â€“ always get the latest (debugging staleness)
[[headers]]
  for = "/*.html"
  [headers.values]
  Cache-Control = "no-store, must-revalidate"

# Short cache for assets while debugging (bump querystring on deploy)
[[headers]]
  for = "/assets/*"
  [headers.values]
  Cache-Control = "max-age=30, must-revalidate"

# (Optional) global CORS for static assets (functions already set their own)
[[headers]]
  for = "/*"
  [headers.values]
  Access-Control-Allow-Origin = "*"

# Convenience function routes you already use
[[redirects]]
  from = "/api/stt"
  to   = "/.netlify/functions/stt"
  status = 200

[[redirects]]
  from = "/api/memory/upsert"
  to   = "/.netlify/functions/memory-upsert"
  status = 200

[[redirects]]
  from = "/api/search"
  to   = "/.netlify/functions/search"
  status = 200


[[redirects]]
  from = "/api/memory/search"
  to   = "/.netlify/functions/memory-search"
  status = 200

[[redirects]]
  from = "/api/eleven-token"
  to   = "/.netlify/functions/eleven-token"
  status = 200

[[redirects]]
  from = "/api/tts-stream"
  to   = "/.netlify/functions/tts-stream"
  status = 200

[[redirects]]
  from = "/api/tts"
  to   = "/.netlify/functions/tts"
  status = 200

[[redirects]]
  from = "/api/rtc/create-room"
  to   = "/.netlify/functions/rtc-create-room"
  status = 200

[[redirects]]
  from = "/api/rtc/token"
  to   = "/.netlify/functions/rtc-token"
  status = 200

[[redirects]]
  from = "/api/voices"
  to   = "/.netlify/functions/voices"
  status = 200

# ---------- Edge Function (SSE streaming) ----------
# Bind the edge function to BOTH routes so the frontend can use either.
[[edge_functions]]
  path = "/api/chat-stream"
  function = "chat-stream"

[[edge_functions]]
  path = "/.netlify/functions/chat-stream"
  function = "chat-stream"

# ---------- Headers ----------
# Correct MIME for asset JS (harmless; Netlify usually sets this automatically)
[[headers]]
  for = "/assets/*.js"
  [headers.values]
  Content-Type = "application/javascript"

# Global security headers (kept as-is)
[[headers]]
  for = "/*"
  [headers.values]
  Content-Security-Policy = '''
    default-src 'self';
    connect-src 'self' https://api.openai.com https://api.elevenlabs.io https://api.daily.co https://*.daily.co;
    img-src 'self' data: blob:;
    media-src 'self' data: blob:;
    font-src 'self' data:;
    style-src 'self' 'unsafe-inline';
    script-src 'self';
    frame-src https://*.daily.co;
  '''
  Permissions-Policy = "camera=(self), microphone=(self), geolocation=()"
  X-Frame-Options = "SAMEORIGIN"
  X-Content-Type-Options = "nosniff"
  Referrer-Policy = "strict-origin-when-cross-origin"
